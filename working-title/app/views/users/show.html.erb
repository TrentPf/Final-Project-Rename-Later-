<div class="container">
  
  <div class="profile-banner">
  <img src ="https://www.tenforums.com/geek/gars/images/2/types/thumb_15951118880user.png" class="picture">
  <h1 class="heading"><%= current_user.username %>
  
 
  </h1>
  Name: <br>
  <%= current_user.first_name %> <%= current_user.last_name %> 
  <br>
  Date Joined: <br>
  <%= current_user.created_at %>
  <br>
  Tournaments Created: <%= @amount_created %> <br>
  Tournaments attended: <%= @amount_attended %> <br>
  </div>
  </div>
  <div class="Content">
      
      
    
    
<% if !@event_organized.empty? %>
<table class="table">
      <thead>
        <tr>
          <th scope="col">Name</th>
          <th scope="col">Game</th>
          <th scope="col">Date</th>
          <th scope="col">Skill</th>
          <th scope="col">Region</th>
        </tr>
      </thead>
      <tbody>
        <% @event_organized.each do |t|%>
          <tr>
            <td><%= t.name %></td>
            <td><%= t.game %></td>
            <td><%= t.date %></td>
            <td><%= t.skill %></td>
            <td><%= t.region %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
<% end %>
<br>
<% if !@event_attended.empty? %>
<table class="table">
      <thead>
        <tr>
          <th scope="col">Name</th>
          <th scope="col">Game</th>
          <th scope="col">Date</th>
          <th scope="col">Skill</th>
          <th scope="col">Region</th>
        </tr>
      </thead>
      <tbody>
        <% @event_attended.each do |a|%>
          <tr>
            <td><%= a.name %></td>
            <td><%= a.game %></td>
            <td><%= a.date %></td>
            <td><%= a.skill %></td>
            <td><%= a.region %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
<% end %>

  </div>

</div>