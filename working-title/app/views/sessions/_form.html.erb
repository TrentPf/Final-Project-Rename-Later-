<div class="flex-container">
<div class="form-style">
<%= form_tag '/login' do %>
<h1 style="color:#ffffff;">Login:</h1>
<label for="field1"><span>Username </span><%= text_field_tag :username,params[:user_name], class: 'input-field', placeholder: 'Username' %></label>
<label for="field2"><span>Password </span><%= password_field_tag :password,nil, class: 'input-field', type: 'password', placeholder: 'Password' %></label>

<label><span> </span><%= submit_tag "Submit" %></label>
<% end %>

</form>
</div>
</div>