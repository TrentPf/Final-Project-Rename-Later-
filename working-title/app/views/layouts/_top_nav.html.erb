<head>

<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta2/css/all.min.css" integrity="sha512-YWzhKL2whUzgiheMoBFwW8CKV4qpHQAEuvilg9FAn5VJUDwKZZxkJNuGM4XkWuk94WCrrwslk8yWNGmY1EduTA==" crossorigin="anonymous" referrerpolicy="no-referrer" />
<link href="https://fonts.googleapis.com/css2?family=Roboto&display=swap" rel="stylesheet">

</head>

<nav>
<%= link_to '/', class: "title" do %>
  matchmaker.gg
<% end %>
<div class="middle-header">
<%= form_tag("/tournaments", method: "get", class: "search-bar") do %>
  <%= text_field_tag :search, nil, class: "search-field", placeholder: "Search tournaments" %>
  <%= select_tag :game, options_for_select(["League of Legends", "Super Smash Bros Ultimate", "Other..."]), include_blank: "Select Game", class: "select" %>
  <%= button_tag "", class: "fas fa-search search-button" %>
<% end %>
</div>
<div class="right-side-header">
  <% if current_user %>

  <%= link_to '/profile', class: "btn" do %>
    My Profile
  <% end %>

  <%= link_to '/events', class: "btn" do %>
    My Events
  <% end %>

  <%= link_to '/logout', class: "btn" do %>
    <%= fa_icon "sign-out" %>
    Log Out
  <% end %>
  <% else %>
  <%= link_to '/login', class: "btn" do %>
  <%= fa_icon "sign-in" %>
    Login
  <% end %>
    <%= link_to '/signup', class: "btn" do %>
    <%= fa_icon "sign-in" %>
      Register
    <% end %>
<% end %>
</div>
</nav>